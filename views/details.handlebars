<div class="title">
  <h1>{{category}}</h1>
</div>

<div class="content container">
  {{#each trees}}
    <div class="row">
      <div class="col detail-item">
        <div class="row text-center">
          <a href="/Tree/{{this.NAME}}" class="image">
            <img src="/{{this.IMG}}" alt="forest1">
          </a>
        </div>
        <div class="row">
          <p class="detail-text">
            {{this.NAME}}
          </p>
        </div>
      </div>
    </div>
  {{/each}}

  <div class="badge bg-light ">
    <h3><a href="/">Back</a></h3>
  </div>
</div>
